<Window x:Class="webtv_partition_editor.WaitMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
        Title="Unmounting drive" Height="60" Width="350" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Border BorderBrush="#0000FF" BorderThickness="2">
        <Grid>
            <Image gif:AnimationBehavior.SourceUri="pack://application:,,,/webtv_partition_editor;component/view/static/images/webtv-animated.gif" gif:AnimationBehavior.RepeatBehavior="Forever" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Opacity="0.15" />
            <Label Name="wait_message" Content="Waiting..." HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="276" Foreground="Navy" FontWeight="UltraBold" Height="30"/>
        </Grid>
    </Border>
</Window>
